<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/staff_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

    </ImageView>


    <TextView
        android:id="@+id/staff_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_alignTop="@+id/staff_poster"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/staff_poster"
        tools:text="Ivan Ivanov">

    </TextView>

    <TextView
        android:id="@+id/staff_description"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_below="@+id/staff_name"
        android:layout_alignStart="@+id/staff_name"
        android:layout_marginTop="5dp"
        tools:text="Description">

    </TextView>

</RelativeLayout>
