<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/close_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="26dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/close_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:importantForAccessibility="no">
    </ImageView>

    <ImageView
        android:id="@+id/add_to_collection_image"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/add_collection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close_icon"
        android:importantForAccessibility="no">
    </ImageView>

    <TextView
        android:id="@+id/add_to_collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_collection"
        android:layout_marginStart="50dp"
        android:textSize="20sp"
        android:textAppearance="@style/main_style"
        app:layout_constraintBottom_toBottomOf="@+id/add_to_collection_image"
        app:layout_constraintStart_toEndOf="@+id/add_to_collection_image"
        app:layout_constraintTop_toTopOf="@+id/add_to_collection_image">
    </TextView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/add_to_collection_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_to_collection">
    </com.google.android.material.divider.MaterialDivider>



    <CheckBox
        android:id="@+id/first_custom_checkbox"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="70dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_to_collection_divider" />


    <TextView
        android:id="@+id/first_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Первая"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textAppearance="@style/main_style"
        app:layout_constraintBottom_toBottomOf="@+id/first_custom_checkbox"
        app:layout_constraintStart_toEndOf="@+id/first_custom_checkbox"
        app:layout_constraintTop_toTopOf="@+id/first_custom_checkbox">
    </TextView>

    <TextView
        android:id="@+id/first_custom_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/first_custom_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10"
        android:layout_marginEnd="26dp"
        app:layout_constraintTop_toTopOf="@+id/first_custom_name">
    </TextView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/first_custom_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_custom_name">
    </com.google.android.material.divider.MaterialDivider>

    <CheckBox
        android:id="@+id/second_custom_checkbox"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="15dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_custom_divider" />


    <TextView
        android:id="@+id/second_custom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Вторая"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textAppearance="@style/main_style"
        app:layout_constraintBottom_toBottomOf="@+id/second_custom_checkbox"
        app:layout_constraintStart_toEndOf="@+id/second_custom_checkbox"
        app:layout_constraintTop_toTopOf="@+id/second_custom_checkbox">
    </TextView>

    <TextView
        android:id="@+id/second_custom_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/second_custom_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="10"
        android:layout_marginEnd="26dp"
        app:layout_constraintTop_toTopOf="@+id/second_custom_name">
    </TextView>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/second_custom_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_custom_name">
    </com.google.android.material.divider.MaterialDivider>

    <Button
        android:id="@+id/accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        style="@style/main_style"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_custom_divider">
    </Button>

</androidx.constraintlayout.widget.ConstraintLayout>

